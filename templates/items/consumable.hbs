<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{item.img}}" data-tooltip="{{item.name}}" data-edit="img">

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'NIH.ItemName' }}">
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{itemType}}</h4>
                <span class="item-status">{{itemStatus}}</span>
            </div>

            <ul class="summary flexrow">
                <li>
                    {{lookup config.consumableTypes system.consumableType }}
                </li>
                <li>
                    <select name="system.rarity">
                        {{selectOptions config.itemRarity selected=system.rarity blank=""}}
                    </select>
                </li>
                <li>
                    <input type="text" name="system.source" value="{{system.source}}" placeholder="{{ localize 'NIH.Source' }}">
                </li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "NIH.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "NIH.Details" }}</a>
        <a class="item" data-tab="effects">{{ localize "NIH.Effects" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "nih.item-description"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            <h3 class="form-header">{{ localize "NIH.ItemConsumableDetails" }}</h3>

            {{!-- Consumable Type --}}
            <div class="form-group">
                <label>{{ localize "NIH.ItemConsumableType" }}</label>
                <select name="system.consumableType">
                    {{selectOptions config.consumableTypes selected=system.consumableType}}
                </select>
            </div>

            <div class="form-group">
                <label>{{localize "NIH.Attunement"}}</label>
                <select name="system.attunement" data-dtype="Number">
                    {{selectOptions config.attunements selected=system.attunement}}
                </select>
            </div>

            {{!-- Consumable Status --}}
            <div class="form-group stacked">
                <label>{{ localize "NIH.ItemConsumableStatus" }}</label>
                <label class="checkbox">
                    <input type="checkbox" name="system.equipped" {{checked system.equipped}}> {{ localize "NIH.Equipped" }}
                </label>
                <label class="checkbox">
                    <input type="checkbox" name="system.identified" {{checked system.identified}}> {{ localize "NIH.Identified" }}
                </label>
            </div>

            {{#if (eq system.consumableType "ammo")}}
            {{!-- Consumable Properties --}}
            <div class="form-group stacked weapon-properties">
                <label>{{ localize "NIH.ItemAmmoProperties" }}</label>
                {{#each config.physicalWeaponProperties as |name prop|}}
                <label class="checkbox">
                    <input type="checkbox" name="system.properties.{{prop}}" {{checked (lookup ../system.properties prop)}}> {{ name }}
                </label>
                {{/each}}
            </div>
            {{/if}}

            <h3 class="form-header">{{ localize "NIH.ItemConsumableUsage" }}</h3>

            {{!-- Item Activation Template --}}
            {{> "nih.item-activation"}}
            {{#if system.activation.type}}
            <div class="form-group">
                <label class="checkbox">
                    <input type="checkbox" name="system.uses.autoDestroy" {{checked system.uses.autoDestroy}}> {{ localize "NIH.ItemDestroyEmpty" }}
                </label>
            </div>
            {{/if}}

            <h3 class="form-header">{{ localize "NIH.ItemConsumableActivation" }}</h3>

            {{!-- Item Action Template --}}
            {{> "nih.item-action"}}
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects flexcol" data-group="primary" data-tab="effects">
            {{> "nih.active-effects"}}
        </div>
    </section>
</form>
